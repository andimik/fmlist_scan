
BASE=$(pwd)

# https://github.com/steve-m/kalibrate-rtl.git
GITUSER=steve-m
GITPROJ=kalibrate-rtl

if [ ! -d ${BASE}/git/${GITUSER} ]; then
  mkdir -p ${BASE}/git/${GITUSER}
fi

cd ${BASE}/git/${GITUSER}
if [ -d ${GITPROJ} ]; then
  cd ${GITPROJ}
  git pull --rebase
else
  git clone https://github.com/${GITUSER}/${GITPROJ}.git
fi

cd ${BASE}/git/${GITUSER}/${GITPROJ}
./bootstrap

CFLAGS=-I${HOME}/.local/include CXXFLAGS=-I${HOME}/.local/include  LDFLAGS=-L${HOME}/.local/lib LIBRTLSDR_LIBS=-lrtlsdr ./configure --prefix=${HOME}/.local
CFLAGS=-I${HOME}/.local/include CXXFLAGS=-I${HOME}/.local/include  LDFLAGS=-L${HOME}/.local/lib LIBRTLSDR_LIBS=-lrtlsdr make

echo "remaining todo: sudo make install"
#echo "remaining todo: sudo ldconfig"

cd ${BASE}

# sudo make install
