
if [ -z "${FMLIST_SCAN_USER}" ]; then
  export FMLIST_SCAN_USER="pi"
fi

# add crontab entry: execute gpstime.sh every minute
# see http://theunixtips.com/bash-automate-cron-job-maintenance/
(
  echo 'MAILTO=""'
  crontab -l -u ${FMLIST_SCAN_USER} | grep -v "MAILTO=" | grep -v startBgScanLoop.sh | grep -v checkBgScanLoop.sh | grep -v "# min hour dom mon dow"  2>/dev/null
  echo "@reboot                  sleep 5 ; bash -l /home/${FMLIST_SCAN_USER}/bin/startBgScanLoop.sh autostart  >/dev/null 2>&1"
  echo "# min hour dom mon dow   command"
  echo "  *   *    *   *   *     /home/${FMLIST_SCAN_USER}/bin/checkBgScanLoop.sh  >/dev/null 2>&1"
) | crontab -u ${FMLIST_SCAN_USER} -

